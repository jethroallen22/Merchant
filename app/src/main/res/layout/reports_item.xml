<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="2dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:outlineAmbientShadowColor="#494747">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:background="@color/white"
            android:outlineProvider="none"
            android:padding="16dp">

            <ImageView
                android:id="@+id/iv_activity_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_baseline_fastfood_24" />

            <TextView
                android:id="@+id/tv_activity_name"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/robotobold"
                android:text="Home"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/iv_activity_icon"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_activity_address"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/robotoregular"
                android:lines="1"
                android:maxLines="2"
                android:text="330 Sansdazz St. Manila City"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/iv_activity_icon"
                app:layout_constraintTop_toBottomOf="@+id/tv_activity_name" />

            <TextView
                android:id="@+id/tv_activity_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotobold"
                android:text="P 309"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_activity_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/robotoregular"
                android:text="18 Oct 2022, 9:00 PM"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/iv_activity_icon"
                app:layout_constraintTop_toBottomOf="@+id/tv_activity_address" />

<!--            <Button-->
<!--                android:id="@+id/btn_activity_details"-->
<!--                android:layout_width="75dp"-->
<!--                android:layout_height="40dp"-->
<!--                android:backgroundTint="@color/mosibusPrimary"-->
<!--                android:text="Details"-->
<!--                android:textAllCaps="false"-->
<!--                android:textSize="10sp"-->
<!--                app:layout_constraintBottom_toBottomOf="@+id/tv_activity_date"-->
<!--                app:layout_constraintEnd_toEndOf="parent" />-->

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>